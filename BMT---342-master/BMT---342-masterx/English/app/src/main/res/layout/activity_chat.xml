<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mesajlasma.Chat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#00AE94"
        android:layout_alignParentTop="true"
        android:id="@+id/ust">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/back"
            android:layout_marginTop="10dp"
            android:id="@+id/backimg"
            ></ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="18dp"

            android:textColor="#353b48"
            android:id="@+id/chatuserName"></TextView>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listele"
        android:layout_below="@+id/ust"
        android:layout_above="@+id/alt"
        android:background="@drawable/chat_bck"></androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="#00AE94"
        android:id="@+id/alt"
        android:layout_alignParentBottom="true">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:hint="Write your text here"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="#353b48"
            android:id="@+id/message"></EditText>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/send"
            android:layout_marginTop="15dp"
            android:id="@+id/sendimg"
            ></ImageView>
    </LinearLayout>

</RelativeLayout>